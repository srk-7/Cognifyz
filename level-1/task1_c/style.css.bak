ul {
    list-style: none;
    padding: 0;
    margin: 0;
}
nav {
    background-color: #333; /* Background color for the navigation bar */
}

ul {
    display: flex; /* Display the list items horizontally */
    justify-content: space-around; /* Distribute items evenly */
    padding: 10px 0; /* Add padding to the top and bottom of the list */
}

li {
    margin: 0;
}

a {
    text-decoration: none;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    transition: background-color 0.3s;
}

a:hover {
    background-color: #555;
}
