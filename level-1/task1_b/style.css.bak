body 
{
    font-family: Arial, sans-serif;
}
.container 
{
    max-width: 300px;
    margin: 0 auto;
	text-align: center;
}
.input 
{
    width: 100%;
    padding: 10px;
    margin: 10px 0;
	border: 1px solid #ccc;
    border-radius: 5px;
}        
.button 
{
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    cursor: pointer;
}
.submit-button:hover 
{
	background-color: #0056b3;
}